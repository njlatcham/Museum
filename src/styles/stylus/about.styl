.mission {
    width: 50%
    margin: 40px auto
    
    h2 {
        text-align: center
        font-size: 3rem
    }
    
    p {
        color: #a6a6a6
        font-size: 1.4rem
        line-height: 1.5
    }
    
    .mission-last {
        color: #000
    }
}

.photos {
    display: flex

    img {
        height: 50%
        width: 50%
        margin-right: 15px
    }
    
    .pic2 {
        overflow: hidden
        
        img {
            width: 100%
        }
    }
}

.history {
    width: 50%
    margin: 40px auto

    h2 {
        text-align: center
        font-size: 3rem
    }
    
    ul {
        list-style-type: none
        padding: 0
        
        li {
            display: flex
            margin: 20px 0
            
            .history-dates {
                font-size: 1.4rem
                line-height: 1.5
                margin: 0
                width: 25%
            }
            
            .history-info {
                font-family: 'Archivo', sans-serif
                font-size: 1.4rem
                line-height: 1.5
                margin: 0
                width: 75%
            }
        }
    }
}

.sponsors {
    background-color: #f8f8f8
    padding: 40px 0
    
    .sponsors-container {
        display: flex
        
        .sponsor-info {
            display: flex
            flex-direction: column
            flex: 1
            
            .fa-university, .fa-globe, .fa-calendar-alt, .fa-ticket-alt {
                color: #a69d83
                height: 40px
                margin: 20px auto 20px auto
                width: 40px
            }
            
            h3 {
                font-family: 'Archivo', sans-serif
                font-size: 3rem
                margin: 0
                text-align: center
            }
            
            p {
                text-align: center
                font-size: 1.4rem
                color: #a6a6a6
            }
        }
    }
}

.contact {
    margin: 40px auto
    width: 50%

    h2 {
        text-align: center
        font-size: 2.5rem
    }
    
    p {
        color: #a6a6a6
        font-family: 'Archivo', sans-serif
        font-size: 1.4rem
    }
    
    button {
        display: block
        border: 1px solid #000
        padding: 10px 25px
        margin: 0 auto
    }
}