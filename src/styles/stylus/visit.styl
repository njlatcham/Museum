.header {
    padding-top: 64px
    width: 100%
    height: 200px
    overflow: hidden
    position: relative
        
    img {
        width: 100%
    }
    
    h1 {
        color: #000
        font-size: 4rem
        position: absolute
        top: 55%
        left: 17.5%
    }
}

.header-nav {
    background-color: #fff
    width: 100%

    ul {
        display: flex
        list-style-type: none
        padding: 0
        
        li {
            font-family: 'archivo', sans-serif
            font-size: 1.4rem
            padding: 20px 10px 20px 0
            border-bottom: 1px solid #f0e9f9
            
            &:hover {
                border-bottom: 1px solid #a6a6a6
            }
            
            a {
                color: #a6a6a6
                text-decoration: none
            }
        }
    }
}

.admission {
    border-bottom: 1px solid #f0e9f9
    display: flex
    padding: 30px 0
    
    .admission-title {
        font-size: 2rem
        flex: 1
        
        h3 {
            margin: 0
        }
    }
    
    .admission-info {
        flex: 1
        
        h4 {
            font-family: 'Archivo', sans-serif
            font-size: 1.8rem
            margin: 0
        }
        
        p {
            color: #a6a6a6
            font-family: 'Archivo', sans-serif
            font-size: 1.4rem
        }
        
        ul {
            display: flex
            flex-direction: column
            list-style-type: none
            padding: 0
            
            li {
                border-bottom: 1px solid #f0e9f9
                font-family: 'Archivo', sans-serif
                font-size: 1.4rem
                padding: 10px 0
            }
        }
        
        .admission-info_p {
            margin: 30px 0
        }
        
        .admission-bttns {
        
            .admission-bttn {
                cursor: pointer
                font-family: 'Archivo', sans-serif
                font-size: 1.2rem
                text-transform: uppercase
                padding: 4% 5%
                            
                &:focus {
                    outline: 0
                }
            }
            
            .black {
                border: none
                background-color: #000
                color: #fff
                margin-right: 10px
            }
            
            .white {
                border: 1px solid #f0e9f9
            }
        }
    }
}

.directions {
    border-bottom: 1px solid #f0e9f9
    display: flex
    padding: 30px 0
    
    .directions-title {
        flex: 1
        font-size: 2rem
        
        h3 {
            margin: 0
