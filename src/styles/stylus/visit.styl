    }
    
    .directions-info {
        flex: 1
        
        p {
            color: #000
            font-family: 'Archivo', sans-serif
            font-size: 1.4rem
            margin: 0
            padding-bottom: 30px
        }
        
        .directions-info_types {
            
            .dropdown {

                h3 {
                    border: 1px solid #f0e9f9
                    font-family: 'archivo', sans-serif
                    font-size: 1.6rem
                    margin: 0
                    padding: 10px 20px
                    
                    .fa-arrow-down {
                        float: right
                    }
                }
                
                .dropdown-info {
                    display: none
                }
                
                .open {
                    color: #000
                    display: block
                    border-left: 1px solid #f0e9f9
                    border-right: 1px solid #f0e9f9
                    padding: 10px 20px
                }
            }
        }
    }
}

